<div class="row">
  <div id="hotties">
    <ul>
      <% @photos.each do |photo| %>
      <li><a href="/users/<%= photo.user_id %>"><img src="<%= photo.image %>" alt="" class="thumbnail"></a><caption><%= photo.caption %></caption></li>
      <% end %>
    </ul>
  </div>
</div>

<%= direct_upload_form_for @uploader do |f| %>
  <p><%= f.file_field :image %></p>
  <p><%= f.submit "Upload Image" %></p>
<% end %>
